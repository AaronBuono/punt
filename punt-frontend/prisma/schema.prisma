generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stream {
  authority          String   @id
  roomName           String
  title              String?
  isActive           Boolean  @default(false)
  viewerCount        Int      @default(0)
  manuallyStopped    Boolean  @default(false)
  startedAt          DateTime?
  endedAt            DateTime?
  lastFetched        DateTime?
  lastMetricsFetched DateTime?
  currentMarketPubkey   String?
  currentMarketCycle    Int?
  currentMarketUpdatedAt DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([roomName])
}

model EncryptedBet {
  id                 String   @id @default(cuid())
  wallet             String
  pollId             String
  side               Int
  amount             Float
  pollTitle          String?  // Added: Name of the poll
  winningSide        Int?     // Added: Winning side (0 or 1) when resolved
  outcome            String   @default("Pending") // Added: Pending, Frozen, Win, Loss
  encryptedData      String   // Base64 encoded encrypted bet details
  nonce              String
  arcisPublicKey     String
  storedAt           DateTime @default(now())
  updatedAt          DateTime @default(now()) @updatedAt // Added: Track when bet outcome updated

  @@index([wallet])
  @@index([pollId])
  @@index([wallet, storedAt])
  @@index([outcome])
}
