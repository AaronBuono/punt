generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Stream {
  authority         String   @id
  livepeerId        String
  playbackId        String
  streamKey         String
  isActive          Boolean  @default(false)
  viewerCount       Int      @default(0)
  manuallyStopped   Boolean  @default(false)
  startedAt         DateTime?
  endedAt           DateTime?
  lastFetched       DateTime?
  lastMetricsFetched DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@unique([livepeerId])
}
