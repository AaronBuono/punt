generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stream {
  authority          String   @id
  roomName           String
  title              String?
  isActive           Boolean  @default(false)
  viewerCount        Int      @default(0)
  manuallyStopped    Boolean  @default(false)
  startedAt          DateTime?
  endedAt            DateTime?
  lastFetched        DateTime?
  lastMetricsFetched DateTime?
  currentMarketPubkey   String?
  currentMarketCycle    Int?
  currentMarketUpdatedAt DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@unique([roomName])
}

model EncryptedBet {
  id                 String   @id @default(cuid())
  wallet             String
  pollId             String
  side               Int
  amount             Float
  pollTitle          String?  // Added: Name of the poll
  winningSide        Int?     // Added: Winning side (0 or 1) when resolved
  outcome            String   @default("Pending") // Added: Pending, Frozen, Win, Loss
  encryptedData      String   // Base64 encoded encrypted bet details
  nonce              String
  arcisPublicKey     String
  storedAt           DateTime @default(now())
  updatedAt          DateTime @default(now()) @updatedAt // Added: Track when bet outcome updated

  @@index([wallet])
  @@index([pollId])
  @@index([wallet, storedAt])
  @@index([outcome])
}

// Event-specific models for live IRL betting events
model EventPoll {
  id              String        @id @default(cuid())
  question        String        // "Will this pack contain an Ultra Rare or better?"
  status          String        @default("active") // active, frozen, settled
  outcome         String?       // ULTRA_RARE, NO_ULTRA_RARE
  totalPot        Float         @default(0)
  cardWinner      String?       // Wallet address of random card winner
  createdAt       DateTime      @default(now())
  settledAt       DateTime?
  
  bets            EventBet[]
  
  @@index([status])
}

model EventBet {
  id              String        @id @default(cuid())
  pollId          String
  wallet          String
  handle          String        // User's display name
  choice          String        // YES, NO
  stake           Float         @default(1) // Fixed $1 stake
  payout          Float?        // Calculated payout if won
  isCardWinner    Boolean       @default(false) // If Ultra Rare pulled, one random winner
  createdAt       DateTime      @default(now())
  
  poll            EventPoll     @relation(fields: [pollId], references: [id], onDelete: Cascade)
  
  @@index([pollId])
  @@index([wallet])
  @@index([pollId, choice])
}
